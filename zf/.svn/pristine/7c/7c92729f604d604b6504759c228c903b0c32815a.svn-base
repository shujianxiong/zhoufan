@import "../../../../baseConfig/config.less";
.address_head{
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 999;
    height: 50px;
    background: @blockbacground;
    padding: 10px;
    box-sizing: border-box;
    font-size: @commonText;
    line-height: 30px;
    margin-bottom: 10px;
    .head_select{
        float: left;
    }
    .head_manage{
        float: right;
    }
}
.address_box{
    overflow: hidden;
}
.address_input{
    height: 42px;
    background: @blockbacground;
        border-bottom: 1px solid @linecolor;
    label{
        float: left;
        line-height: 42px;
        font-size: @commonText;
        width: 30%;
        text-align: center;
    }
    input{
        float: left;
        text-indent: 10px;
        width: 70%;
        height: 42px;
        line-height: 42px;
        border: none;
        color: #fff;
       outline:none;
        font-size: @describText;
        background: transparent;
    }
}
.address_select{
    overflow: hidden;
   background: @blockbacground;
   border-bottom: 1px solid @linecolor;
   div{
       position: relative;
       height: 35px;
       padding: 0 10px;
       label{
            float: left;
            line-height: 35px;
            font-size: @commonText;
            width: 30%;
            text-align: center;
        }
        input{
            float: left;
            text-indent: 10px;
            width: 70%;
            height: 21px;
            margin: 7px 0;
            border: none;
            outline:none;
            font-size: @describText;
        }
        i{
            position: absolute;
            color: #000;
            right: 15px;
            font-size: @tinyIcon;
            line-height: 35px;top: 0;
        }
   }
}
.address_textarea{
    overflow: hidden;
    padding: 10px 0;
   background: @blockbacground;
   border-bottom: 1px solid @linecolor;
   label{
        float: left;
        font-size: @commonText;
        width: 30%;
        text-align: center;
    }
    textarea{
        float: left;
        text-indent: 10px;
        box-sizing: border-box;
        line-height: 20px;
        width: 70%;
        height:100px;
        border: none;
        outline:none;
        font-size: @describText;
        background: transparent;
    }
}
.address_radio{
    width: 100%;
    height: 40px;
    label{
        display: block;
        height: 20px;
    line-height: 40px;
    text-indent: 10px;
        i{
         font-size: @smallIcon;  
        }
        span{
            font-size: @viceText;
            b{
                color: #999;
                font-size: @describText;
            }
        }
    }
}

.address_button{
    width: 35%;
    margin: 60px auto;
    padding: 5px 20px;
    color: #fff;
    .border-radius(10px);
    background: @goldencolor;
    text-align: center;
    font-size: @commonText;
}

/*************************地址列表***********************/
.address_list{
   overflow: hidden;
   .list_item{
       padding: 0 10px;
       background: @blockbacground;
       border-bottom: 1px solid @linecolor;
       &:last-child{
           border: none;
       }
        .address{
            position: relative;
            span{
                position: absolute;
                left: 0;
                color: @goldencolor;font-size: @viceText;
                padding: 0 5px;
                line-height: 20px;
            }
            p{
                font-size: @viceText;
                line-height: 20px;
                padding:5px 40px;
            }
            .more{
                position: absolute;
                right: 10px;
                line-height: 20px;
                color: @goldencolor;
                font-size: @blockIcon;
                top: -10px;
            }
        }
        .name{
            line-height: 30px;
            span{
                font-size: @viceText;
                color: #fff;
                padding: 0 5px;
            }
        }
   }
}
.list_botton{
    overflow: hidden;
    padding: 10px 0;
    span{
        float: left;
        padding: 3px 20px;
        margin: 0 5px;
        font-size: @viceText;
        .border-radius(10px);
        &.edit{
            background: @goldencolor;
        }
        &.delete{
             background:#e41f1f;
        }
        &.setDefault{
             background:#2dd6b7;
        }
    }
}
//收货地址列表
.addressWrapper{
    position: fixed;
    top: 20px;
    bottom: 0;
    z-index: 9;
    width: 100%;
    overflow: hidden;

}





