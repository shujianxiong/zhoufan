@import "../../baseConfig/config.less";
.address_head{
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 999;
    height: 50px;
    background: @backgroundcolor;
    padding: 10px;
    box-sizing: border-box;
    font-size: @commonText;
    line-height: 30px;
    margin-bottom: 10px;
    .head_select{
        float: left;
    }
    .head_manage{
        float: right;
    }
}
.address_box{
    overflow: hidden;
    background: @blockbacground;
}
.address_input{
    min-height: 50px;
    border-bottom: 1px solid @linecolor;
    overflow:hidden;
    label{
        float: left;
        line-height: 50px;
        font-size: @commonText;
        width: 30%;
        text-align: left;
        padding-left:10px;
        box-sizing: border-box;
    }
    input{
        float: left;
        text-indent: 10px;
        width: 70%;
        height: 50px;
        line-height: 50px;
        border: none;
        color: #fff;
        outline:none;
        font-size: 1.2rem;
        background: transparent;
    }
    textarea{
        float: left;
        text-indent: 10px;
        width: 70%;
        height: 100px;
        line-height: 50px;
        border: none;
        color: #fff;
        outline:none;
        font-size: 1.2rem;
        background: transparent;
    }
}
.address_select{
    overflow: hidden;
   background: @blockbacground;
   border-bottom: 1px solid @linecolor;
   div{
       position: relative;
       height: 50px;
       label{
             float: left;
            line-height: 50px;
            font-size: @commonText;
            width: 30%;
            text-align: left;
            padding-left:10px;
            box-sizing: border-box;
        }
        input{
            float: left;
            text-indent: 10px;
            width: 70%;
            height: 35px;
            margin: 7px 0;
            border: none;
            outline:none;
            font-size: @describText;
        }
        i{
            position: absolute;
            color: #000;
            right: 15px;
            font-size: @tinyIcon;
            line-height: 50px;top: 0;
        }
   }
}
.address_textarea{
    overflow: hidden;
    padding: 10px 0;
   background: @blockbacground;
   border-bottom: 1px solid @linecolor;
   label{
        float: left;
        font-size: @commonText;
        width: 30%;
        text-align: center;
    }
    textarea{
        float: left;
        text-indent: 10px;
        box-sizing: border-box;
        line-height: 20px;
        width: 70%;
        height:100px;
        border: none;
        outline:none;
        font-size: @describText;
        background: transparent;
    }
}
.address_radio{
    width: 100%;
    height: 40px;
    label{
        display: block;
        height: 20px;
        line-height: 40px;
        text-indent: 10px;
        i{
         font-size: @smallIcon;  
        }
        span{
            font-size: @viceText;
            b{
                color: #999;
                font-size: @describText;
            }
        }
    }
}

.address_button{
    width: 90%;
    margin: 40px auto;
    line-height: 40px;
    color: #fff;
    .border-radius(2px);
    background: @goldencolor;
    text-align: center;
    font-size: 1.4rem;
}

/*************************地址列表***********************/
.address_list{
   overflow: hidden;
   /*margin-top: 50px;*/
   .list_item{
        position:relative;
       background: @blockbacground;
       border-bottom: 1px solid @linecolor;
       margin-bottom: 10px;
       // &:last-child{
       //     border: none;
       // }
        .address{
            padding: 0 10px;
            overflow: hidden;
            span{
                float: left;
                width: 15%;
                color: @goldencolor;font-size: @viceText;
                padding: 5px;
                line-height: 20px;
                box-sizing: border-box;
            }
            p{
                float: left;
                width: 85%;
                font-size: @viceText;
                line-height: 20px;
                padding:5px 0;
                box-sizing: border-box;
            }
        }
        .name{
             padding: 0 10px;
            position: relative;
            line-height: 30px;
            overflow: hidden;
            span{
                font-size: @viceText;
                color: #fff;
                padding: 0 5px;
                float: left;
                box-sizing: border-box;
            }
        }
        .more{
            position: absolute;
            right: 10px;
            top: 15px;
            color: @goldencolor;
            font-size: 2.4rem;
        }
   }
}
.list_botton{
    overflow: hidden;
    padding: 10px;
    border-top: 1px solid @linecolor;
    span{
        float: right;
        padding: 5px 20px;
        margin: 0 5px;
        font-size: @viceText;
        .border-radius(2px);
        border:1px solid @linecolor;

    }
}
//收货地址列表
.addressWrapper{
    position: fixed;
    top:-50px;
    bottom: 0;
    z-index: 9;
    width: 100%;
    overflow: hidden;

}





