@import "../../baseConfig/config.less";
/**-----------------------导航栏----------------------------*/
.iconfont.iconBlackActive{
    color: #B3B3B3;
}
.textTabBlackActive{
    background: #32254A;
    color: #B3B3B3;
}

header{
    position: fixed;
    top: 0;
    display: block;
    width: 100%;
    height: 46px;
    background: #fff;
    line-height: 46px;
    z-index: 99;
    div{
        position: relative;
        display: inline-block;
        width: 80%;
        height: 28px;
        margin: 9px 0;
        margin-left: 5%;
        border: 1px;
        .border-radius(14px) ;
        background: #dddddd;
        input{
            position: absolute;
            top: 0;
            width: 100%;
            height: 28px;
            border: 1px;
            padding-right:32px;
            .border-radius(14px) ;
            background: url(images/search.png) no-repeat right;
            background-size: 31px;
            color: #000;
            text-indent: 10px;
            &::-webkit-input-placeholder {
                color: #F9F9F9;
            }
        }
    }
    span{
        display: block;
        float: right;
        font-size: @commonText;
        width: 15%;
        color: #000;
        text-align: center;
    }
}
.search_history,.search_autoHint{
    margin-top: 45px;
    overflow: hidden;
    background: @blockbacground;
    div{
        height: 45px;
        padding: 10px;
        box-sizing: border-box;
        i{
            line-height: 25px;
            font-size: @blockIcon;
            &:first-child{
                float: left;
            }
            &:last-child{
                float: right;
            }
        }
        span{
            line-height: 25px;
            padding: 0 10px;
            font-size: @commonText;
            float: left;
        }
    }
    ul{
        overflow: hidden;
        background: @backgroundcolor;
        li{
            height: 40px;
            padding: 10px;
            box-sizing: border-box;
            border-bottom: 1px solid @linecolor;
            font-size: @commonText;
            &.textTabBlackActive{
                background: #4F4F7A;
                color: #4F4F7A;
            }
            p{
                display: inline-block;
                line-height: 20px;
                float: left;
                font-size: @commonText;
                width: 60px;
            }
            span{
                display: block;
                float: right;
                padding: 2px 10px;
                margin: 0 5px;
                border: 1px solid #fff;
                .border-radius(10px)
            }
        }
    }
}
.search_history.hot{
    margin: -1px 0 0 0;
    ul li h3{
        display: inline-block;
        padding-left: 10px;
        font-size: @viceText;
        i{
            color: #ff6a56;
            &.down{
                color: #2dd6b7;
            }
        }
    }
}
























