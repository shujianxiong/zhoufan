@import "../../../baseConfig/config.less";
.selectContentWarp{
	position: fixed;
    box-sizing: border-box;
    top:-30px;
    bottom: 0;
    z-index: 9;
    width: 100%;
    overflow: hidden;
}

header{
    height: 35px;
    padding: 10px;
    i{
      float: left;
      line-height: 35px;
      font-size: @blockIcon !important;
    }
    span{
        display: block;
        float: right;
        padding: 5px 10px;
        margin: 2.5px 0;
        .border-radius(5px);
        text-align: center;
        line-height: 20px;
        color: #fff;
        font-size: @commonText;
        background: @goldencolor;
    }
}
.showUploading_top{
    background: @blockbacground;
    padding: 10px;
    overflow: hidden;
    textarea{
        width: 100%;
        height: 150px;
        color: #999;
        border: none;
        font-size: 14px;
        background: @blockbacground;
    }
    .add{
        overflow: hidden;
        span{
            display: block;
            width: 60px;
            height: 60px;
            float: left;
            padding: 5px;
            i{
                display: block;
                height: 60px;
                width: 60px;
                color: @linecolor;
                font-size: 60px;
            }
            img{
                width: 100%;
                height: 100%;
            }
        }
    }
    .tab{
       overflow: hidden;
        p{
            font-size: @commonText;
            line-height: 30px;
        }
        span{
            float: left;
            width: 70px;
            height: 25px;
            margin: 5px;
            line-height: 25px;
            text-align:center;
            background: @backgroundcolor;
            .border-radius(5px);
            &.active{
                background: @goldencolor;
                color: #000;
            }
        }
    }
}
.showUploading_selected{
    overflow: hidden;
    padding: 10px;
    h2{
        font-size: @commonTitle;
        line-height: 30px;
    }
    ul{
        overflow: hidden;
        padding-left: 5px;
        li{
            float: left;
            width: 33.333%;
            box-sizing: border-box;
            overflow: hidden;
            float: left;
            padding-right: 5px;
            div{
                position: relative;
                width: 100%;
                border: 1px solid @linecolor;
                img{
                    width: 100%;
                }
                i{
                    position: absolute;
                    top: -1px;
                    right: -1px;
                    width: 25px;
                    height: 25px;
                    background: url(images/no.png) no-repeat center;
                    background-size: 100% 100%;
                    &.selected{
                       background: url(images/yes.png) no-repeat center;
                       background-size: 100% 100%; 
                    }
                }
                p{
                    line-height: 20px;
                    text-align: center;
                }
            }
        }
    }
    
}
.showUplselecte_top{
    overflow: hidden;
    background: @blockbacground;
    span{
        width: 100%;
        img{
            width: 100%;
        };
    }
    .nav{
        height: 45px;
        line-height: 45px;
        li{
            float: left;
            width: 33.33%;
            height: 100%;
            padding: 0 10px;
            box-sizing: border-box;
             span{
                display: inline-block;
                text-align: center;
                font-size: @commonTitle;
                line-height: 45px;
            	box-sizing: border-box;
            	height: 100%;
                &.active{
                   border-bottom: 3px solid @goldencolor; 
                }
            } 
        }
    }
}
.showUplselecte_selected{
    overflow: hidden;
    padding: 10px 5px;
    li{
        float: left;
        width: 50%;
        box-sizing: border-box;
        overflow: hidden;
        float: left;
        padding: 5px;
        div{
            position: relative;
            width: 100%;
            border: 1px solid @linecolor;
            img{
                width: 100%;
            }
            i{
                position: absolute;
                top: -1px;
                right: -1px;
                width: 25px;
                height: 25px;
                background: url(images/no.png) no-repeat center;
                background-size: 100% 100%;
                &.selected{
                   background: url(images/yes.png) no-repeat center;
                   background-size: 100% 100%; 
                }
            }
            p{
                line-height: 20px;
                text-align: center;
            }
        }
    }
}
