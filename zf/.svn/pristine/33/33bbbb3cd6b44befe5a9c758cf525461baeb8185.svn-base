@import "../../../../../baseConfig/config.less";
.exchangeWarp{
    padding: 10px;
    margin-bottom: 10px;
    background: @blockbacground;
    .integralText{
        height: 40px;
        color: #FFFFFF;
        font-size: 1.2rem;
        p{
            float: left;
            line-height: 40px;
            padding: 0 10px;
        }
    }
    .coupon_item{
        position: relative;
        width: 100%;
        height: 100px;
        .border-radius(10px);
        margin-bottom: 10px;
        background-image: url(images/cashCoupon1.png);
        background-position: center;
        background-size: 100% 100%;
        .itemLeft{
            float: left;
            position: relative;
            width: 35%;
            p{
                width: 100%;
                line-height: 100px;
                text-indent: 20px;
                font-size: 3rem;
                color: #ff6a56;
                font-weight: 600; 
                text-align: center;
            }
            span{
                position: absolute;
                bottom: 20px;
                left: 50%;
                margin-left: -30px;
                text-indent: 20px;
                font-size: 1rem;
            }
        }
        .itemRight{
            position: relative;
            box-sizing: border-box;
            width: 60%;
            height: 100%;
            padding: 10px;
            float: right;
            color: #000;
            h2{
                line-height: 30px;
                font-size: 1.3rem;
            }
            h3{
                line-height: 20px;
                font-size: 1.1rem; 
            }
            p{
               line-height: 20px;
                font-size:0.8rem;  
            }
            span{
                position: absolute;
                bottom: 5px;
                right: 10px;
                line-height: 20px;
                font-size:0.6rem;  
            }
            .promptlyExchange{
            box-sizing: border-box;
                position: absolute;
                top: 25px;
                right: 10px;
                width: 50px;
                height: 50px;
                line-height: 20px;
                border: 1px solid @goldencolor;
                border-radius:5px;
                padding: 5px 8px;
                color: @goldencolor;
                font-size: 1.2rem; 
            }
        }
    }
}

