@import "../../../../../baseConfig/config.less";
/**-----------------------导航栏----------------------------*/
.message{
    height: 20px;
    padding: 10px;
    color: #999;
    line-height: 20px;
    font-size: 1.2rem;
}
.settingarea{
    background: @blockbacground;
    li{
        height: 46px;
        width: 100%;
        box-sizing: border-box;
        padding: 0 10px;
        border-bottom: 1px solid @linecolor;
        line-height: 46px;
        span{
            font-size: 1.4rem;
            padding: 0 5px;
        }
        i{
            font-size: 1.6rem;
            float: right;
        }
    }
}
.modify{
    margin: 50px 10% ;
    .input{
        margin: 20px auto;
        height: 40px;
        input{
            width: 100%;
            height: 40px;
            line-height: 40px;
            border: none;
            color: #F7F6F6;
            background: transparent;
            border-bottom: 1px solid @linecolor;
            text-indent: 10px; 
        }
    }
    .input.verif{
        position: relative;
        input{
            width: 100%;
            float: left;
        }
        div{
            position: absolute;
            right: 0;
            top:4px;
            width: 40%;
            height: 32px;
            border: 1px;
            .border-radius(5px);
            background: @goldencolor;
            text-align: center;
            line-height: 32px;
            font-size: @commonText;
        }
    }
}
.register{
    p{
        color: #fff;
        height: 40px;font-size: 1.1rem;
        span{
            color: @goldencolor;font-size: 1.1rem;
        }
    }
}
.modify_button{
    width: 30%;
    height: 36px;
    margin: 20px auto;
    color: #fff;
    border: 1px;
    .border-radius(5px);
    background: @goldencolor;
    text-align: center;
    line-height: 36px;
    font-size: @commonText;
}
.modify_span{
    line-height: 30px;
    font-size: 1.2rem;
    color: @goldencolor;
    padding: 0 10px;
    float: right;
}
.success_topText{
    width: 100%;
    padding:10px;
    color:@goldencolor;
    box-sizing: border-box;
    h2{
       font-size: 1.5rem; 
       line-height: 40px;
       text-align: center;
       i{
           font-size: 2rem;
           line-height: 40px;
           padding: 0 10px;
       }
    }
    p{
       font-size: 1.2rem; 
       line-height: 2rem;
       text-align: center;
    }
}