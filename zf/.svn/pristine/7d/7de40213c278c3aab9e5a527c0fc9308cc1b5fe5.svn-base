@import "../../../baseConfig/config.less";
/**-----------------------我的小咖秀----------------------------*/
.bigcastTop{
    position: fixed;
    top: 0px;
    z-index: 999;
    width: 100%;
    height: 45px;
    background: @blockbacground;
    ul{
        width: 100%;
        height: 100%;
        li{
            width: 33.333%;
            height: 100%;
            float: left;
            text-align: center;
            padding: 10px 0;
            box-sizing: border-box;
            span{
                display: block;
                width: 100%;
                box-sizing: border-box;
                border-right: 1px solid #fff;
                font-size: 1.4rem;
                padding-bottom: 5px;
                line-height: 20px;
            }
            &:last-child{
                span{
                    border: none;
                }
            }
        }
        .active{
            color: @goldencolor;
            border-bottom: 2px solid @goldencolor;
        }
    }
}
.filterTop{
    position: fixed;
    top: 45px;
    height: 45px;
    width: 100%;
    line-height: 45px;
    z-index: 999;
    background: @backgroundcolor;
    border-bottom: 1px solid @goldencolor;
    li{
        float: left;
        width: 20%;
        text-align: center;
        font-size: 1.3rem;
        i{
            font-size: 0.8rem;
        }
        &.active{
            color: @goldencolor;
        }
    }
}
.bigcastWarp{
    position: fixed;
    top: 50px;
    bottom: 0;
    width: 100%;
    overflow: hidden;
    padding: 10px;
    box-sizing: border-box;
}
.bigcastItem{
    overflow: hidden;
    margin: 10px 0 20px 0;
    .border-radius(10px);
    .headArea{
        position: relative;
        overflow: hidden;
        width: 100%;
        background-position: center;
        background-size: 100% 100%;
        background-repeat: no-repeat;
        .border-radius(10px);
        .attentionIcon{
            position: absolute;
            top: 20px;
            right: 10px;
            min-width: 60px;
            height: 20px;
            border: 1px solid #fff;
            .border-radius(12px);
            padding: 2px 5px ;
            line-height: 20px;
            text-align: center;
        }
        .currentBigcast{
            position: absolute;
            top: 0px;
            left: 10px;
            width: 34px;
            padding: 5px 3px ;
            text-align: center;
            font-size: 1.2rem;
            background: @redcolor;
        }
        .headPic{
            width: 25%;
            margin: 20px auto 10px;
            img{
                width: 100%;
                height: 100%;
                .border-radius(100%);
                border: 3px solid @bluecolor;
            };
        }
        .name{
            height: 40px;
            padding: 5px;
            text-align: center;
            font-size: 1.4rem;
            box-sizing: border-box;
            span{
                line-height: 30px;
            }
            i{
                display: inline-block;
                width: 20px;
                height: 20px;
                img{
                    width: 100%;
                    height: 100%;vertical-align: middle;
                }
            }
        }
        p{
            text-align: center;
            line-height: 20px;
            font-size: 1.2rem;
            padding: 0 10px;
            i{
                font-size: 1.4rem;
                color: @goldencolor;
            }
        }
        ul{
            width: 100%;
            height: 40px;
            padding: 10px 30px;
            box-sizing: border-box;
            li{
                box-sizing: border-box;
                width: 50%;
                height: 20px;
                line-height: 20px;
                float: left;
                text-align: center;
                border-right: 1px solid #fff;
                font-size: 1.2rem;
                &:last-child{
                    border: none;
                }
            }
        }
        .labelArea{
            width: 100%;
            padding: 10px 0;
            text-align: center;
            span{
                min-width: 60px;
                height: 20px;
                border: 1px solid #fff;
                .border-radius(12px);
                padding: 2px 5px ;
                line-height: 20px;
                margin: 0 5px;
            }
        }
    }
    .bigcastIntro{
        overflow: hidden;
        background: @blockbacground;
        h2{
            padding: 0 10px;
            font-size: 1.4rem;
            color:#999;
            line-height: 30px;
        }
        p{
            padding: 5px 10px;
            font-size: 1.2rem;
            line-height: 20px; 
            border-bottom: 1px solid @linecolor;
        }
        .bigcastWorks{
            overflow: hidden;
            padding: 10px 0;
            li{
                float: left;
                width: 33.333%;
                box-sizing: border-box;
                img{
                    width: 100%;
                }
            }
        }
    }

}
.bigcast_filtrate{
    position: fixed;
    top:90px;
    bottom: 0;
    left: 0;
    z-index: 99;
    width: 100%;
    overflow: hidden;
    background: @backgroundcolor;
    box-sizing: border-box;
    .sub_content{
        width: 100%;
        box-sizing: border-box;
        border-bottom: 1px solid @linecolor;
        padding:0 10px 10px 10px;
        overflow: hidden;
        .top{
            height: 40px;
            line-height: 40px;
            .name{
                float:left;
                font-size: 1.4rem;
                line-height: 40px;
            }
        }
        .content{
            overflow: hidden;
            ul{
                width: 100%;
                overflow: hidden;
                li{
                    float: left;
                    min-width: 25%;
                    padding: 5px;
                    box-sizing: border-box;
                    span{
                        display: block;
                        padding: 5px 10px;
                        background: @blockbacground;
                        text-align: center;
                        .border-radius(5px);
                        &.active{
                            background: @goldencolor;
                            color: #fff;
                        }
                    }
                }
            }
            
        }
    }
    .button{
        overflow: hidden;
        width: 50%;
        margin: 20px auto;
        span{
            color: @goldencolor;
            font-size: @viceText;
            padding: 3px 15px;
            margin: 3px;
            border: 1px solid @goldencolor;
            .border-radius(5px);
            &.reInput{
                float: left;
            }
            &.confirm{
                float: right;
            }
        }
    }
}
   
  