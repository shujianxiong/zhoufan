@import "../../baseConfig/config.less";
/**-----------------------导航栏----------------------------*/
.login_bac{
    height: 100%;
    width: 100%;
    background: url(images/login.png) no-repeat center;
    background-size: 100% 100%;
}
.login_head{
    position: relative;
    height: 60px;
    width: 100%;
    line-height: 60px;
    span{
        position: absolute;
        font-size: @commonText;
        line-height: 60px;
        &:first-child{
            left: 20px;
        }
        &:last-child{
            right: 20px;
        }
    }
}
.login_input{
    margin: 100px 50px;
    input{
        text-indent: 10px;
        margin: 10px 0;
        width: 100%;
        height: 40px;
        line-height: 40px;
        border: none;
        color: #F9F6F6;
        font-size: @viceText;
        background: transparent;
        border-bottom: 1px solid @linecolor;
    }
    p{
        height: 40px;
        line-height: 40px;
        text-align: right;
        font-size: @commonText;
    }
}
.login_button,.register_button{
    width: 68.75%;
    height: 40px;
    margin: 60px auto;
    color: #fff;
    border: 1px;
    .border-radius(2px);
    background: @goldencolor;
    text-align: center;
    line-height: 40px;
    font-size: @commonText;
}
.register{
    margin: 100px 50px 50px 50px;
    .input{
        margin: 30px auto;
        height: 40px;
        input{
            width: 100%;
            height: 40px;
            line-height: 40px;
            border: none;
            color: #F7F6F6;
            background: transparent;
            border-bottom: 1px solid @linecolor;
            text-indent: 10px; 
        }
    }
    .input.verif{
        position: relative;
        input{
            width: 100%;
            float: left;
        }
        div{
            position: absolute;
            right: 0;
            top:4px;
            width: 40%;
            height: 32px;
            border: 1px;
            .border-radius(2px);
            background: @goldencolor;
            text-align: center;
            line-height: 32px;
            font-size: @commonText;
        }
    }
}
.register{
    p{
        color: #fff;
        height: 40px;font-size: 1.1rem;
        span{
            color: @goldencolor;font-size: 1.1rem;
        }
    }
}
.registTip{
    color:#999;
    line-height: 30px;
    font-size: 1.2rem;
    margin: 0 auto;
}
