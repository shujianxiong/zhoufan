@import "../../../../baseConfig/config.less";
/**-----------------------我的小咖秀----------------------------*/
.topPic{
    position: fixed;
    top: 0;
    z-index: 999;
    width: 100%;
    img{
        height: 100%;
        width: 100%;
    }
}  
.mentorTop{
    position: fixed;
    top: 0px;
    z-index: 999;
    width: 100%;
    height: 45px;
    background: @blockbacground;
    ul{
        width: 100%;
        height: 100%;
        li{
            width: 25%;
            height: 100%;
            float: left;
            text-align: center;
            padding: 10px 0;
            box-sizing: border-box;
            span{
               display: block;
                width: 100%;
                box-sizing: border-box;
                border-right: 1px solid #fff;
                font-size: @commonText;
                line-height: @commonTitle;
                padding-bottom: 5px;
                line-height: 20px;
            }
            &:last-child{
                span{
                    border: none;
                }
            }
        }
        .active{
            color: @goldencolor;
            border-bottom: 2px solid @goldencolor;
        }
    }
}
.mentorWarp{
    overflow: hidden;
    .mentorcontent{
        position: fixed;
        top: 5px;
        bottom: 0;
        width: 100%;
        overflow: hidden;
        padding: 10px;
        box-sizing: border-box;
    }
    .articleItem{
        position: relative;
        width: 100%;
        background-position: center;
        background-size: 100% 100%;
        border-radius: 5px;
        margin-bottom: 10px;
        span{
            position: absolute;
            top: 10px;
            left: 20px;
            i{
                font-size: 2rem;
                &.active{
                    color: @redcolor;
                }
            }
        }
        .time{
            position: absolute;
            top: 10px;
            right: 10px;
            i{
                float: left;
                font-size: 1.8rem;
            }
            p{
                font-size: 1.4rem;
                float: left;
            }
        }
        h2{
            position: absolute;
            bottom: 10px;
            width: 90%;
            left: 5%;
            font-size: 1.4rem;
        }
    }
}


  