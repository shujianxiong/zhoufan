@import "../../../../baseConfig/config.less";

.integralWarp{
    overflow: hidden;
    position: fixed;
    top: 0;
    bottom: 0;
    z-index: 9;
    width: 100%;
    overflow: hidden;
    .showArea{
        padding: 10px;
        background: @blockbacground;
        .top{
           line-height: 30px;
           height: 30px;
           span{
               float: left;
           }
           p{
               float: right;
               color: @goldencolor;
           } 
        }
        h2{
            padding: 10px 0;
            font-size: 3rem;
            font-weight: 600;
            b{
                font-size: 1rem;
                font-weight: 400;
            }
        }
        .button{
            width: 100%;
            background: @goldencolor;
            color: #fff;
            padding: 10px 0;
            text-align: center;
            font-size: 1.4rem;
        }
    }
    h3{
        height: 40px;
        line-height: 40px;
        font-size:1.2rem;
        padding-left: 10px;
        span{
            font-size:1rem;
            color: #999;
        }
    }
    ul{
       overflow: hidden;
        background: @blockbacground;
        li{
            width: 100%;
            padding: 10px;box-sizing: border-box;
            border-bottom: 1px solid @linecolor;
            p{
                color: #fff;
                font-size: 1.2rem;
                line-height: 20px;
            }
            h4{
                font-size: 1.4rem;
                line-height: 30px;
                b{
                    float: right;
                    color: @goldencolor;
                }
            }
        }
    }
}
.integralExplain{
    overflow: hidden;
    .block{
        background: @blockbacground;
        overflow: hidden;
        padding: 5px 10px;
        h1{
            font-size: 1.6rem;
            line-height: 40px;
        }
        h2{
            font-size: 1.4rem;
            line-height: 30px;
        }
        p{
            padding: 5px 20px;
            font-size: 1.2rem;
            color: #999;
        }
    }
}
