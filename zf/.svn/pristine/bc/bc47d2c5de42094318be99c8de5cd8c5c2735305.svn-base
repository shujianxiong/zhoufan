@import "../../baseConfig/config.less";

header{
    position: fixed;
    top: 0;
    display: block;
    width: 100%;
    height: 45px;
    background: @backgroundcolor;
    line-height: 45px;
    z-index: 99;
    .navigateCategory_input{
        position: relative;
        display: inline-block;
        width: 90%;
        height: 30px;
        margin: 7.5px 5%;
        .border-radius(15px);
        background-color: @blockbacground;
        input{
            position: absolute;
            top: 0;
            width: 100%;
            height: 30px;
            line-height: 30px;    
            padding-right: 40px;
            border: 1px;
            .border-radius(15px);
            background: url(images/search1.png) no-repeat;
            background-size: 18px 18px;
            background-position: 10px 6px;
            color: #fff;
            text-indent: 40px;
            outline: none;
            &::-webkit-input-placeholder {
                color: #999;
            }
        }
    }
}
//tab头部
.navigateCategory_options{
    position: fixed;
    top: 45px;
    height: 45px;
    z-index:999;
    width: 100%;
    background: @blockbacground;
    ul{
        width: 100%;
        height: 100%;
        li{
            float: left;
            width: 50%;
            height: 100%;
            box-sizing: border-box;
            span{
                display: block;
                width: 100%;
                height: 100%;
                line-height: 45px;
                text-align: center;
                font-size: 1.4rem;
                box-sizing: border-box;
                &.active{
                    border-bottom: 3px solid @goldencolor;
                }
            }
        }
    }
}  

 /**-----------------------内容项----------------------------*/

.subPage{
    position: fixed;
    top: 90px;
	left: 0;
	bottom:50px;
	&.fansCategory{
		left:100%
	}
}
.sub_content{
    position: relative;
    width: 100%;
    height: 200px;
    background-position: center;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    p{
        position: absolute;
        width: 100%;
        font-size: 1.6rem;
        text-align: center;
        &:first-child{
            bottom: 50%;
        }
        &:nth-child(2){
            top: 50%;
        }
    }
    &.ring{
        background-image: url(images/ring.png)
    }
    &.earrings{
        background-image: url(images/earrings.png)
    }
    &.necklace{
        background-image: url(images/necklace.png)
    }
    &.pendant{
        background-image: url(images/pendant.png)
    }
    .goodsCategoryDetail{
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;left: 0;
        z-index: 99;
        .top{
            position: relative;
            height: 40%;
            width: 100%;
            background: @backgroundcolor;
             h2{
                width: 100%;
                font-size: 1.6rem;
                text-align: center;
            }
        }
        .bottom{
            height: 60%;
            width: 100%;
            background: @blockbacground;
            li{
                float: left;
                width: 33.333%;
                height: 50%;
                text-align: center;
                line-height: -moz-block-height;
                font-size: 1.4rem;
            }
        }
    }
}
.fansCategory{
    overflow: hidden;
    width: 100%;
    ul{
        overflow: hidden;
        padding-left: 10px;
        width: 100%;
        box-sizing: border-box;
        li{
            width: 50%;
            box-sizing: border-box;
            float: left;
            padding: 10px 10px 0 0;
            span{
                display: block;
                width: 100%;
                height: 160px;
                background-position: center;
                background-size: 100% 100%;
                background-repeat: no-repeat;
                p{
                    line-height: 160px;
                    text-align: center;
                    font-size: 1.6rem;
                }
            }
        }
    }
}
 /**-----------------------底部栏----------------------------*/
.index_footer{
    position: fixed;
    bottom: 0;
    height: 50px;
    width: 100%;
    background:#E8E7EC;
    color: #666;
    z-index: 9999;
}
.footNav_sub{
    display: inline-block;
    float: left;
    width: 20%;
    height: 100%;
}
.footNav_sub i,.footNav_sub span{
    display: block;
    width: 100%;
    text-align: center;
    font-style: normal;
}
.footNav_sub span{
    line-height: 20px;
    font-size: 0.9rem;
}
.footNav_sub i{
    line-height: 30px;
    width: 100%;
    text-align: center;
    font-size: 2rem;
}
.footNav_sub.active{
    color: @goldencolor;
}
   

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
